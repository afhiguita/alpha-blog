<%= render 'shared/errors', obj: @user %>

<%= form_for @user, html: {role: 'form'} do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1"><%= f.label :username%></label>
    <%= f.text_field :username, class: "form-control", id: "_title" %>
    <p class="help-block">Entry the Title name for the article.</p>
  </div>

  <div class="form-group ">
    <label for="exampleInputEmail1"><%= f.label :email %></label>
    <%= f.email_field :email, class: "form-control", id: "_description", placeholder: 'Your personal e-mail' %>
    <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
    <span id="inputError2Status" class="sr-only">(error)</span>
  </div>

  <div class="form-group ">
    <label for="exampleInputEmail1"><%= f.label :password %></label>
    <%= f.password_field :password, class: "form-control", id: "_description", placeholder: 'Enter Password' %>
    <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
    <span id="inputError2Status" class="sr-only">(error)</span>
  </div>

  <%= f.submit(@user.new_record? ? 'Sign up' : 'Update', class: "btn btn-primary") %>
<% end %>